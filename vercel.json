{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "excludeFiles": [
          "api/src/**",
          "api/venv/**",
          "api/.venv/**",
          "api/env/**",
          "api/ENV/**",
          "**/*.log",
          "**/.DS_Store",
          "**/__pycache__/**",
          "**/*.pyc",
          "**/*.so",
          "**/*.dylib",
          "**/*.pyd"
        ]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}